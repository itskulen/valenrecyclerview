<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailActivity">

    <ImageView
        android:id="@+id/cover"
        android:layout_marginTop="10dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/komik1"
        android:adjustViewBounds="true"
        android:contentDescription="@string/cover" />
<!-- baris 12 hingga 19 merupakan pembuatan imageview yang id nya diberinama cover, margin atas di set 10dp, layout width 150dp dan height match parent, gambar yang ditampilkan akan diimpor dari direktori drawable dan pada content description diberi nama cover -->
    <TextView
        android:id="@+id/title"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/title"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:lines="2"
        android:textStyle="bold"/>
    <!-- baris 22 hingga 31 merupakan pembuatan textview yang id nya diberinama title, margin atas di set 10dp, layout width warp content dan height match parent, memunculkan sebuah text "title/judul buku" ditengah-tengah font huruf berwarna hitam dengan ukuran 20 dan style huruf adalah bold -->

    <TextView
        android:id="@+id/author"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/author"
        android:textColor="@color/darkGrey"
        android:textSize="18sp"
        android:lines="1"/>
    <!-- baris 35 hingga 43 merupakan pembuatan textview yang id nya diberinama author, margin atas di set 10dp, layout width warp content dan height match parent, memunculkan sebuah text "author/nama pengarang" ditengah-tengah font huruf berwarna dark grey dengan ukuran 18  -->

    <TextView
        android:id="@+id/description"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/description"
        android:textColor="@color/black"
        android:textSize="16sp"/>
    <!-- baris 47 hingga 54 merupakan pembuatan textview yang id nya diberinama description, margin atas di set 10dp, layout width warp content dan height match parent, memunculkan sebuah text "description" ditengah-tengah font huruf berwarna hitam dengan ukuran 16  -->

</LinearLayout>